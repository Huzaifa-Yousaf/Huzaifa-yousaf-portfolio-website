{
  "name": "huzaifa-portfolio",
  "version": "2.0.0",
  "description": "Interactive portfolio website with AI features",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=8080",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o style.min.css style.css",
    "minify-js": "terser script.js -o script.min.js --compress --mangle",
    "deploy": "npm run build && echo 'Build complete'",
    "test": "echo 'No tests specified'",
    "lint": "eslint script.js"
  },
  "keywords": ["portfolio", "pwa", "ai", "interactive"],
  "author": "Huzaifa Yousaf",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "terser": "^5.15.0",
    "live-server": "^1.2.2",
    "eslint": "^8.0.0"
  }
}